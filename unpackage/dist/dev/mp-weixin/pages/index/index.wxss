page {
  width: 100%;
  height: 100%;
}
.scrool-page {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}
.header-cont {
  width: 100%;
  height: 110rpx;
  line-height: 100rpx;
  text-align: center;
  background: red;
}
.list-cont {
  flex: 1;
  position: relative;
}
.list-cont .scrool-more {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.list-cont .list {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #e0e0e0;
}
.footer {
  color: #fff;
  line-height: 100rpx;
  flex: 0 0 100rpx;
  /* 不放大不缩小固定100rpx */
}


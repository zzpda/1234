page {
  height: 100%;
  width: 100%;
  background-color: #eeeeee;
}
.container {
  height: 100%;
  width: 100%;
}
.title-box {
  height: 90rpx;
  width: 100%;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #C0C0C0;
}
.title-box .text-title {
  margin-left: 20rpx;
  align-items: center;
  font-size: 30rpx;
  color: #999999;
}
.box {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #ffffff;
  border-bottom: 1rpx solid #C0C0C0;
  font-size: 30rpx;
  color: #626262;
}
.text-box {
  margin-left: 20rpx;
  width: 180rpx;
  text-align-last: justify;
}
.input-box {
  display: flex;
  width: 100%;
  justify-content: flex-end;
  text-align: right;
  margin-right: 20rpx;
  font-size: 25rpx;
}
.img-right {
  width: 30rpx;
  height: 30rpx;
  display: flex;
}
.bottom-box .bottom {
  margin-top: 20rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
}
.Infor {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  color: #4CD964;
  justify-content: flex-end;
}
.btnLogin {
  height: 80rpx;
  width: auto;
  background: #047bf9;
  border-radius: 5rpx;
  margin-top: 100rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

